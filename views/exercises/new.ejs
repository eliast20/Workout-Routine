<%- include('../partials/header') %>

<div>Before adding, please ensure that the Exercise is not in the following list:</div>
<section id="badge-container">
  <% exercises.forEach(function(e) { %>
    <article class="badge"><%= e.name %></article>
  <% }) %>
</section>

<form id="add-exercise-form" action="/exercises" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  <label>Reps:</label>
  <input type="number" name="reps">
  <label>Weight:</label>
  <input type="number" name="weight">
  <label>Sets:</label>
  <input type="number" name="sets">
  <label>Muscle Group:</label>
  <input type="text" name="muscleGroup">
  <input type="submit" value="Add Exercise">
</form>

<%- include('../partials/footer') %>